{
  "id": null,
  "uid": "gateway-dashboard",
  "title": "Gateway Metrics",
  "tags": ["gateway", "events"],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "stat",
      "title": "Accepted Events",
      "gridPos": { "x": 0, "y": 0, "w": 8, "h": 4 },
      "targets": [
        {
          "expr": "sum(gateway_events_accepted_total)",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Processed Events",
      "gridPos": { "x": 8, "y": 0, "w": 8, "h": 4 },
      "targets": [
        {
          "expr": "gateway_events_processed_total",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Failed Events",
      "gridPos": { "x": 16, "y": 0, "w": 8, "h": 4 },
      "targets": [
        {
          "expr": "sum(gateway_events_failed_total)",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Processed Events Rate (1m) by Source",
      "gridPos": { "x": 0, "y": 4, "w": 24, "h": 8 },
      "targets": [
        {
          "expr": "rate(gateway_events_processed_total[1m])",
          "legendFormat": "{{source}}",
          "refId": "A"
        }
      ]
    }
  ]
}
